{
  "name": "@signageos/file",
  "version": "0.0.0",
  "description": "A simple wrapper over file command available in Linux systems.",
  "main": "dist/index.js",
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "build": "tsc",
    "lint": "tslint --config node_modules/@signageos/codestyle/tslint.json \"{src,tests}/**/*.{ts,tsx}\"",
    "prebuild": "rm -rf dist/*",
    "prepare": "npm run prebuild && npm run build",
    "test": "mocha",
    "watch": "tsc --watch",
    "check": "npm run depcheck && npx --userconfig ./.npmrc @signageos/lib check-deps",
    "depcheck": "depcheck --specials=tslint,mocha --parsers='*.ts:typescript,*.js:es6' --detectors='requireCallExpression,importDeclaration' --ignore-dirs='dist' --ignores='@types/*,@signageos/codestyle,mocha,depcheck'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/signageos/file.git"
  },
  "keywords": [
    "file",
    "linux",
    "windows",
    "wrapper",
    "mime-type",
    "detection",
    "determine"
  ],
  "author": "signageOS.io <dev@signageos.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/signageos/file/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "homepage": "https://github.com/signageos/file#readme",
  "dependencies": {
    "child-process-promise": "2.2.1",
    "debug": "4.1.1"
  },
  "devDependencies": {
    "@signageos/codestyle": "0.0.15",
    "@types/child-process-promise": "2.2.1",
    "@types/debug": "4.1.5",
    "@types/mocha": "7.0.2",
    "@types/node": "12.12.29",
    "@types/should": "13.0.0",
    "depcheck": "0.9.2",
    "mocha": "7.1.0",
    "should": "13.2.3",
    "ts-node": "8.6.2",
    "tslint": "6.0.0",
    "typescript": "3.8.3"
  }
}
